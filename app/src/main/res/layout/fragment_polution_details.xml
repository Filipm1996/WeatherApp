<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/city_weather_details_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_default"
    android:background="@color/dark_marine_transparent"
    android:padding="@dimen/margin_default">


    <TextView
        android:id="@+id/co_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_0.25x"
        android:layout_marginTop="@dimen/margin_default"
        tools:text="@string/temperature_feel_like"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_default"/>

    <TextView
        android:id="@+id/co_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_0.5x"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_default"
        tools:text="23" />



    <TextView
        android:id="@+id/no_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_0.5x"
        tools:text="@string/pressure_title"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/co_title" />

    <TextView
        android:id="@+id/no_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/co_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_0.5x"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_default"
        tools:text="Pressure Value" />

    <TextView
        android:id="@+id/no2_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/no_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_0.5x"
        tools:text="@string/visibility_title"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_default" />

    <TextView
        android:id="@+id/no2_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/no_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_0.5x"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_default"
        tools:text="Visibility Value" />

    <TextView
        android:id="@+id/o3_title"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/no2_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_0.5x"
        tools:text="@string/wind_speed_title"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_default" />

    <TextView
        android:id="@+id/o3_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/no2_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_0.5x"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_default"
        tools:text="Wind Speed Value" />


    <TextView
        android:id="@+id/so2_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/o3_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_0.5x"
        tools:text="@string/cloudiness_title"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_default" />

    <TextView
        android:id="@+id/so2_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/o3_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_0.5x"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_default"
        tools:text="Cloudiness Value" />

    <TextView
        android:id="@+id/pm25_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/so2_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_0.5x"
        tools:text="@string/humidity_title"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_default" />

    <TextView
        android:id="@+id/pm25_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/so2_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_0.5x"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_default"
        tools:text="humidity Value" />

    <TextView
        android:id="@+id/pm10_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/so2_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_0.5x"
        tools:text="@string/humidity_title"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_default" />

    <TextView
        android:id="@+id/pm10_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/so2_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_0.5x"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_default"
        tools:text="humidity Value" />

    <TextView
        android:id="@+id/nh3_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/so2_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_0.5x"
        android:text="@string/humidity_title"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_default" />

    <TextView
        android:id="@+id/nh3_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/so2_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_0.5x"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_default"
        tools:text="humidity Value" />

</androidx.constraintlayout.widget.ConstraintLayout>